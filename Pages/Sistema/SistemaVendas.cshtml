@page
@model SistemaVendasModel

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h2 class="text-center mb-4">Painel Sistema de Vendas</h2>

    <div class="row">
        <!-- Coluna Lançamentos -->
        <div class="col-md-3">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">🛒 Lançamentos de Venda</h5>
                </div>
                <div class="card-body">
                    <a href="/Sistema/LancamentoVendas" class="btn btn-outline-success w-100">Nova Venda</a>
                </div>
            </div>
        </div>

        <!-- Coluna Cadastros -->
        <div class="col-md-3">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">📋 Cadastros</h5>
                </div>

                <div class="card-body">
                    <a href="/Sistema/Cadastros/Clientes"   class="btn btn-outline-primary w-100 mb-2">Clientes</a>
                    <a href="/Sistema/Cadastros/Vendedores" class="btn btn-outline-primary w-100 mb-2">Vendedores</a>
                    <a href="/Sistema/Cadastros/Produtos"   class="btn btn-outline-primary w-100">Produtos</a>
                </div>
            </div>
        </div>

        <!-- Coluna Consultas -->
        <div class="col-md-3">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">🔍 Consultas</h5>
                </div>

                <div class="card-body">
                    <a href="/Sistema/Consultas/Pedidos"                    class="btn btn-outline-dark w-100 mb-2">Pedidos</a>
                    <a href="/Sistema/Consultas/Clientes/BuscarPorNome"     class="btn btn-outline-dark w-100 mb-2">Clientes por Nome</a>
                    <a href="/Sistema/Consultas/Vendedores/BuscarPorNome"   class="btn btn-outline-dark w-100 mb-2">Vendedores por Nome</a>
                    <a href="/Sistema/Consultas/Produtos"                   class="btn btn-outline-dark w-100 mb-2">Produtos</a>
                    <a href="/Sistema/Consultas/MovimentoEstoque"           class="btn btn-outline-dark w-100">Movimentos de Estoque</a>
                </div>
            </div>
        </div

        <!-- Coluna Relatórios -->
        <div class="col-md-3">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">📊 Relatórios</h5>
                </div>

                <div class="card-body">
                    <a href="/Sistema/Relatorios/Produtos"          class="btn btn-outline-dark w-100 mb-2">Relação Operacional de Produtos</a>
                    <a href="/Sistema/Relatorios/Clientes"          class="btn btn-outline-dark w-100 mb-2">Clientes por Nome</a>
                    <a href="/Sistema/Relatorios/Vendedores"        class="btn btn-outline-dark w-100 mb-2">Vendedores por Nome</a>
                    <a href="/Sistema/Relatorios/Vendas"            class="btn btn-outline-dark w-100">Vendas por Data</a>
                </div>
            </div>
        </div>
    </div>
</div>
